<Page x:Class="Практика_7.Pages.Priem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Практика_7.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Priem">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Height="50" x:Name="FindPatient">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Label>Введите Индентификатор:</Label>
            
            <TextBox Grid.Row="1" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Grid.Row="1" Grid.Column="1" Click="Find">Найти</Button>
        </Grid>
        <Grid Grid.Row="1"> 
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="List_Rec" Grid.Column="1"  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата: "/>
                                <TextBlock Text="{Binding Date}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Доктор: "/>
                                <TextBlock Text="{Binding Doctor_id}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Диагноз : "/>
                                <TextBlock Text="{Binding Diagnosis}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Рекомендации: "/>
                                <TextBlock Text="{Binding Recomendations}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid x:Name="Priem_Pat" Height="400" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Margin="5">Имя:</Label>
                <Label Grid.Row="0" Grid.ColumnSpan="3" Grid.Column="1"  Content="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></Label>
                <Label Grid.Row="1" Grid.Column="0" Margin="5">Фамилия:</Label>
                <Label Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="1" Content="{Binding Last_Name, UpdateSourceTrigger=PropertyChanged}"></Label>
                <Label Grid.Row="2" Grid.Column="0" Margin="5">Отчество:</Label>
                <Label Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1" Content="{Binding Middle_Name, UpdateSourceTrigger=PropertyChanged}"></Label>
                <Label Grid.Row="3" Grid.Column="0" Margin="5">День Рождения:</Label>
                <Label  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"  Content="{Binding BirthDay, UpdateSourceTrigger=PropertyChanged}"></Label>

                <Label Grid.Row="4" Grid.Column="0" Margin="2 3">Диагноз:</Label>
                <TextBox Height="25" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Label Grid.Row="5" Grid.Column="0" Margin="2 3">Рекомендации:</Label>
                <TextBox Height="20" Grid.Row="6" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Recomendations, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Button Grid.Row="7" Grid.Column="0" Click="Save_Priem">Сохранить</Button>
                <Button Grid.Row="7" Grid.Column="1" Click="Go_Back">Назад</Button>
                <Button Grid.Row="8" Grid.ColumnSpan="2" Click="Change_Inf">Изменить информацию пациента</Button>
            </Grid>
        </Grid>
        
    </Grid>
</Page>
